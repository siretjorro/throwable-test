<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <!-- Splash screen background -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use adaptive launcher icon's foreground and background for splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/ic_launcher_background</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="Text" parent="">
        <!-- Base text styles with fonts, etc.-->
        <!-- Add custom Text styles as neede. For example Text.Body.16 or Text.Title, Text.Subtitle.-->
         <item name="android:textColor">@color/primary</item>
        <!-- <item name="android:fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="android:lineHeight" tools:targetApi="p">@dimen/size_20</item>-->
        <!-- <item name="lineHeight">@dimen/size_20</item>-->
    </style>

    <style name="Text.Heading1">
        <item name="android:textSize">@dimen/text_32</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/text_48</item>
        <item name="lineHeight">@dimen/text_48</item>
    </style>

    <style name="Text.Body16">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/text_24</item>
        <item name="lineHeight">@dimen/text_24</item>
    </style>

    <style name="Text.Button" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!--ProgressBar-->
    <style name="ProgressBar" parent="Widget.MaterialProgressBar.ProgressBar.NoPadding">
        <item name="android:layout_width">@dimen/size_40</item>
        <item name="android:layout_height">@dimen/size_40</item>
        <item name="android:indeterminate">true</item>
        <item name="mpb_progressStyle">circular</item>
        <item name="mpb_useIntrinsicPadding">false</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_4</item>
        <item name="android:indeterminate">false</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">@dimen/size_1</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleMarginStart">@dimen/size_64</item>
        <item name="android:theme">@style/Theme.Toolbar</item>
    </style>

    <style name="Theme.Toolbar" parent="">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Button" parent="Widget.LabComponents.Button.Filled">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button</item>
    </style>

    <style name="ShapeAppearance.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_8</item>
    </style>

    <style name="TextField" parent="Widget.LabComponents.TextField">
        <item name="autoClearErrorMode">onTextChanged</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TextField</item>
    </style>

    <style name="ShapeAppearance.TextField" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_4</item>
    </style>
</resources>
